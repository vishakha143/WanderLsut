<% layout('/layouts/boilerplate') %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2"> 
            <h3> Create a New Listing</h3>
            <br /><br />
            <form action="/Listings"  method="POST"  novalidate   class="needs-validation" enctype="multipart/form-data" >
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input  
                    name="Listing[title]"  
                    placeholder="enter title" 
                    type="Add a catchy title"
                    class="form-control"
                    required
                    />
                <div class="valid-feedback">Title looks good</div>
                </div>  
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea 
                    name="Listing[description]" 
                    class="form-control"
                    required 
                    ></textarea>
                <div class="invalid-feedback">Please enter valid description</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Listing Image</label>
                    <input
                    name="Listing[image]" 
                    type="file"
                    class="form-control"
                    required
                    />
                </div>

                <div class="md-3">
                    <label for="category" class="form-label">Category</label>
                    <!-- <input
                      name="Listing[category]"
                      type="text",
                      placeholder="Trending"
                      class="form-control" 
                      required/> -->

                      <select id= "category"
                       class="form-control form-select" 
                       aria-label="Default select example" 
                        name="Listing[category]" 
                         required>
                        <option selected>--Select category--</option>
                        <option >Mountains</option>
                        <option >Amazing pools</option>
                        <option >Amazing views</option>
                        <option >Farms</option>
                        <option >Treehouse</option>
                        <option >Beachfront</option>
                        <option >Historic</option>
                        <option >Arctic</option>
                      </select>

                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input
                        name="Listing[price]"
                        placeholder="1200" 
                        
                        class="form-control"
                        required/>
                    <div class="invalid-feedback">Price should be vaild</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input
                        name="Listing[country]"
                        placeholder="India"
                        type="text"
                        class="form-control" 
                        required/>
                    <div class="invalid-feedback">Country should be valid</div>
                    </div>
                </div>
            

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input  
                    name="Listing[location]"
                    placeholder="Jaipur,Rajasthan"
                    type="text"
                    class="form-control"
                    required />
                <div class="invalid-feedback">Location should be valid</div>
                </div>
            <button class="btn btn-dark add-btn mt-3">ADD</button>
         
            </form>
        </div>
    </div>
</body>
