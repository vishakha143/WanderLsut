<% layout('/layouts/boilerplate') %>
<h3 class="col-6 offset-3">Login</h3>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div>
                    <label for="username" class="form-label">Username</label>
                    <input  
                    name="username" 
                    type="text"
                    id="username"
                    class="form-control" 
                     required />
                </div>
                <div>
                    <label for="password" class="form-label ">Password</label>
                    <input  
                    name="password" 
                    type="password"
                    id="password"
                    class="form-control"  
                    required />
                    
                </div>
                    <button class="btn btn-outline-success btn-sm mt-3">Login</button>
            </form>
        </div>
    </div>